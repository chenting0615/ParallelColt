<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.bazaarvoice.commons</groupId>
        <artifactId>bv-super-pom</artifactId>
        <version>1.9</version>
        <relativePath />
    </parent>

    <groupId>cern.colt</groupId>
    <artifactId>parallelcolt</artifactId>
    <version>0.9.9-SNAPSHOT</version>
    <packaging>jar</packaging>

    <scm>
        <connection>scm:git:git@github.com:bazaarvoice/parallelcolt.git</connection>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <scala.group>org.scala-lang</scala.group>
        <scala.version>2.10.2</scala.version>
        <!-- <scala.plugin>maven-scala-plugin</scala.plugin> -->
        <!-- <scala.plugin.group>org.scala-tools</scala.plugin.group> -->
        <!-- <scala.plugin.version>2.15.2</scala.plugin.version> -->
        <scala.plugin>scala-maven-plugin</scala.plugin>
        <scala.plugin.group>net.alchim31.maven</scala.plugin.group>
        <scala.plugin.version>3.1.5</scala.plugin.version>
        <!-- <scala.plugin.version>3.1.6-SNAPSHOT</scala.plugin.version> -->
    </properties>

    <dependencies>
        <!-- Scala -->
        <dependency>
            <groupId>${scala.group}</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>

        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>arpack-combo</artifactId>
            <version>0.9.4</version>
        </dependency>

<!--
        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>csparsej</artifactId>
            <version>0.9.4</version>
        </dependency>
-->

        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>jplasma</artifactId>
            <version>0.9.4</version>
        </dependency>

        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>netlib-java</artifactId>
            <version>0.9.4</version>
        </dependency>

        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>optimization</artifactId>
            <version>0.9.4</version>
        </dependency>

        <dependency>
            <groupId>cern.colt</groupId>
            <artifactId>jtransforms</artifactId>
            <version>2.4.1</version>
        </dependency>

<!--
        <dependency>
            <groupId>it.unimi.dsi</groupId>
            <artifactId>fastutil</artifactId>
            <version>6.5.9</version>
        </dependency>
-->

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <!--<scope>test</scope>-->
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                  <groupId>${scala.plugin.group}</groupId>
                  <artifactId>${scala.plugin}</artifactId>
                  <version>${scala.plugin.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-surefire-plugin</artifactId>
               <version>2.6</version>
               <configuration>
                  <excludes>
                     <exclude>**/solver/**</exclude>
                  </excludes>
               </configuration>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-site-plugin</artifactId>
              <version>3.0</version>
              <configuration>
                <reportPlugins>
                  <plugin>
                    <artifactId>maven-project-info-reports-plugin</artifactId>
                    <version>2.2</version>
                  </plugin>
                  <plugin>
                    <groupId>${scala.plugin.group}</groupId>
                    <artifactId>${scala.plugin}</artifactId>
                    <version>${scala.plugin.version}</version>
                    <configuration>
                      <jvmArgs>
                        <jvmArg>-Xms64m</jvmArg>
                        <jvmArg>-Xmx1024m</jvmArg>
                      </jvmArgs>
                    </configuration>
                  </plugin>
                </reportPlugins>
              </configuration>
            </plugin>

            <plugin>
              <groupId>${scala.plugin.group}</groupId>
              <artifactId>${scala.plugin}</artifactId>

              <configuration>
                <recompileMode>incremental</recompileMode>
                <useZincServer>false</useZincServer>
              </configuration>

              <executions>
                <execution>
                  <id>scala-process-resources</id>
                  <phase>process-resources</phase>
                    <goals>
                      <goal>add-source</goal>
                      <goal>compile</goal>
                    </goals>
                  </execution>

                  <execution>
                    <id>scala-process-test-resources</id>
                    <phase>process-test-resources</phase>
                    <goals>
                      <goal>testCompile</goal>
                    </goals>
                  </execution>
              </executions>

            </plugin>
        </plugins>
    </build>
</project>
